#!/bin/bash -e

source $OPENSHIFT_CARTRIDGE_SDK_BASH

function start() {
    mkdir -p /tmp/nginx
    mkdir -p /tmp/nginx/{client_body,prox,fcgi,uwsgi,scgi}
    mkdir -p ${OPENSHIFT_PHP_LOG_DIR}/{nginx,php}

    build_config

    service php-fpm start
    service nginx start
}

function stop() {
   service php-fpm stop
   service nginx stop
}

function configtest() {
    service php-fpm configtest
    service nginx configtest
}

function status() {
    if $(curl -I http://$OPENSHIFT_PHP_IP:$OPENSHIFT_PHP_PORT/ 2>&1 )
    then
        client_result "Application is running"
    else
        client_result "Application is either stopped or inaccessible"
    fi
}

function tidy() {
    client_message "Emptying log dir: $OPENSHIFT_PHP_LOG_DIR"
    shopt -s dotglob
    rm -rf $OPENSHIFT_PHP_LOG_DIR/*
    return 0
}

function build() {
    return 0
}

case "$1" in
    start)           start;;
    stop)            stop;;
    restart)         stop; start;;
    status)          status;;
    configtest)      configtest ;;
    tidy)            tidy;;
    build)           build;;
    deploy)          exit 0;;
    *)               exit 0
esac